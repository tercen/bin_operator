{
  "name": "Bin",
  "description": "Defines intervals based on values' range and bin data points.",
  "tags": [
    "preprocessing"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/bin_operator"
  ],
  "properties": [
    {
      "kind": "EnumeratedProperty",
      "name": "method",
      "defaultValue": "Equal Width",
      "values": [
        "Equal Width",
        "Quantiles",
        "Pretty"
      ],
      "description": "Method to define bins: either Equal width, Quantiles, or Pretty."
    },
    {
      "kind": "DoubleProperty",
      "name": "n_bins",
      "defaultValue": 10,
      "values": {},
      "description": "A number indicating the number of desired bins."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Row",
            "type": "",
            "description": "Optional row factor",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "0..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Column",
            "type": "",
            "description": "Optional column factor",
            "ontologyMapping": "observation",
            "crosstabMapping": "column",
            "cardinality": "0..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Y Axis",
                "type": "numeric",
                "description": "Measurement values",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "X Axis",
                "type": "numeric",
                "description": "Optional second measurement for 2D binning",
                "ontologyMapping": "measurement",
                "crosstabMapping": "x",
                "cardinality": "0..1",
                "factors": []
              },
              {
                "kind": "MetaFactor",
                "name": "Color",
                "type": "",
                "description": "Optional grouping factor",
                "ontologyMapping": "group",
                "crosstabMapping": "color",
                "cardinality": "0..1",
                "factors": []
              }
            ]
          }
        ]
      }
    ],
    "outputSpecsV2": [
      {
        "kind": "ConditionalJoinSpec",
        "description": "Output varies based on X-axis presence and Color presence",
        "alternatives": [
          {
            "kind": "OutputAlternative",
            "condition": "No X-axis (1D binning)",
            "joinSpec": {
              "kind": "OperatorJoinSpec",
              "joinOperators": [
                {
                  "kind": "JoinOperator",
                  "joinType": "left",
                  "leftPair": {
                    "kind": "ColumnPair",
                    "lColumns": [
                      "Row",
                      "Column"
                    ],
                    "rColumns": [
                      "Row",
                      "Column"
                    ]
                  },
                  "rightRelation": {
                    "kind": "TableRelation",
                    "attributes": [
                      {
                        "kind": "Attribute",
                        "name": "bin_label",
                        "type": "string"
                      },
                      {
                        "kind": "Attribute",
                        "name": "bin_id",
                        "type": "double"
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "kind": "OutputAlternative",
            "condition": "With X-axis (2D binning)",
            "joinSpec": {
              "kind": "OperatorJoinSpec",
              "joinOperators": [
                {
                  "kind": "JoinOperator",
                  "joinType": "left",
                  "leftPair": {
                    "kind": "ColumnPair",
                    "lColumns": [
                      "Row",
                      "Column"
                    ],
                    "rColumns": [
                      "Row",
                      "Column"
                    ]
                  },
                  "rightRelation": {
                    "kind": "TableRelation",
                    "attributes": [
                      {
                        "kind": "Attribute",
                        "name": "x_bin_id",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "y_bin_id",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "xy_bin_id",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "x_bin",
                        "type": "string"
                      },
                      {
                        "kind": "Attribute",
                        "name": "y_bin",
                        "type": "string"
                      },
                      {
                        "kind": "Attribute",
                        "name": "xy_bin",
                        "type": "string"
                      },
                      {
                        "kind": "Attribute",
                        "name": "x_count",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "y_count",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "xy_count",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "x_prop",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "y_prop",
                        "type": "double"
                      },
                      {
                        "kind": "Attribute",
                        "name": "xy_prop",
                        "type": "double"
                      }
                    ]
                  }
                }
              ]
            }
          }
        ],
        "refactorSuggestion": "Split into bin_1d and bin_2d operators"
      }
    ]
  }
}